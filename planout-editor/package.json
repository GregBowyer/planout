{
  "name": "planout-editor",
  "version": "0.0.2",
  "description": "Flux-based PlanOut editor",
  "main": "js/app.js",
  "dependencies": {
    "es6-promise": "~0.1.1",
    "react": "~0.11.0",
    "react-tools": "~0.11.0",
    "underscore": "~1.6.0",
    "react-textarea-autosize": "~1.0.2"
  },
  "devDependencies": {
    "browserify": "~5.10.0",
    "envify": "~1.2.0",
    "reactify": "~0.14.0",
    "statics": "~0.1.0",
    "uglify-js": "~2.4.13",
    "watchify": "~1.0.2",
    "jest-cli": "~0.1.5"
  },
  "scripts": {
    "start": "STATIC_ROOT=./static watchify -o static/js/bundle.js -v -d .",
    "build": "STATIC_ROOT=./static NODE_ENV=production browserify . | uglifyjs -cm > static/js/bundle.min.js",
    "collect-static": "collect-static . ./static",
    "test": "jest"
  },
  "author": "Eytan Bakshy",
  "license": "BSD",
  "browserify": {
    "transform": [
      ["reactify", {"es6": true}],
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
